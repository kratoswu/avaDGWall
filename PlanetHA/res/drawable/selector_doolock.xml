<?xml version="1.0" encoding="utf-8"?>
<selector
    xmlns:android="http://schemas.android.com/apk/res/android">
    
    <item android:state_selected="true"  android:state_pressed="true" >
        <shape>
		    <gradient
                android:startColor="@color/item_background"
                android:centerColor="@color/item_background"
                android:endColor="@color/item_background"
                android:angle="270" />
            <corners
                android:radius="360dp" />
		</shape>
	</item>
    
    <item android:state_selected="false" android:state_pressed="true" >
        <shape>
		    <gradient
                android:startColor="@color/item_background"
                android:centerColor="@color/item_background"
                android:endColor="@color/item_background"
                android:angle="270" />
            <corners
                android:radius="360dp" />
		</shape>
	</item>
	
    <item android:state_selected="true"  android:state_pressed="false" >
		<shape>
		    <gradient
                android:startColor="@color/transparent"
                android:centerColor="@color/transparent"
                android:endColor="@color/transparent"
                android:angle="270" />
            <corners
                android:radius="360dp" />
		</shape>
	</item>
    
    <item android:state_selected="false" android:state_pressed="false" >
		<shape>
		    <gradient
                android:startColor="@color/encode_view"
                android:centerColor="@color/encode_view"
                android:endColor="@color/encode_view"
                android:angle="270" />
            <corners
                android:radius="360dp" />
            
            <corners android:radius="360dip"/>
            
		</shape>
	</item>

</selector>


 