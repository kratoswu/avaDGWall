<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="@drawable/back_ground"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="20dp"
    android:paddingRight="20dp"
    android:paddingTop="@dimen/activity_vertical_margin" >
    
    <org.linphone.mediastream.video.display.GL2JNIView
        android:visibility="invisible"
        android:layout_height="match_parent"
        android:layout_width="0dp"
        android:layout_weight="4"
        android:id="@+id/videoSurface" />

    <LinearLayout
        android:layout_marginLeft="20dp"
        android:orientation="vertical"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="match_parent" >

        <Button
            android:onClick="switchVideo"
            android:textSize="24sp"
            android:textColor="#facc2e"
            android:text="@string/btn_answer"
            android:layout_marginBottom="25dp"
            android:paddingLeft="70dp"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:gravity="left|center_vertical"
            android:background="@drawable/answer_btn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/answerBtn" />
        
        <Button
            android:onClick="hangUp"
            android:textSize="24sp"
            android:textColor="#facc2e"
            android:text="@string/btn_hangup"
            android:layout_marginBottom="25dp"
            android:paddingLeft="70dp"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:gravity="left|center_vertical"
            android:background="@drawable/hangup"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/hangupBtn" />
        
        <Button
            android:textSize="24sp"
            android:textColor="#facc2e"
            android:text="@string/btn_mute"
            android:layout_marginBottom="25dp"
            android:paddingLeft="70dp"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:gravity="left|center_vertical"
            android:background="@drawable/mute_btn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/muteBtn" />
        
    </LinearLayout>

</LinearLayout>
