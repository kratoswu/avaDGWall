<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="@drawable/back_ground"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:focusable="true"
    android:focusableInTouchMode="true"
    android:orientation="vertical" >

    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:columnCount="4"
        android:paddingBottom="45dp"
        android:paddingLeft="100dp"
        android:paddingRight="200dp"
        android:paddingTop="10dp"
        android:rowCount="5" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="1"
            android:layout_row="0"
            android:paddingBottom="40dp"
            android:paddingRight="20dp"
            android:text="Gateway IP Address"
            android:textColor="#ffffff" />

        <EditText
            android:id="@+id/ipField"
            android:layout_column="2"
            android:layout_row="0"
            android:ems="10"
            android:singleLine="true"
            android:textColor="#ffffff" />
        <Button
            android:layout_column="3"
            android:layout_row="0"
            android:background="@drawable/search"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/searchBtn" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="1"
            android:layout_row="1"
            android:paddingBottom="40dp"
            android:paddingRight="20dp"
            android:text="Gateway Port"
            android:textColor="#ffffff" />

        <EditText
            android:id="@+id/portField"
            android:inputType="number"
            android:layout_column="2"
            android:layout_row="1"
            android:ems="10"
            android:singleLine="true"
            android:textColor="#ffffff" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="1"
            android:layout_row="2"
            android:paddingBottom="40dp"
            android:paddingRight="20dp"
            android:text="Account"
            android:textColor="#ffffff" />

        <EditText
            android:id="@+id/accField"
            android:layout_column="2"
            android:layout_row="2"
            android:ems="10"
            android:singleLine="true"
            android:textColor="#ffffff" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="1"
            android:layout_row="3"
            android:paddingBottom="40dp"
            android:paddingRight="20dp"
            android:text="Password"
            android:textColor="#ffffff" />

        <EditText
            android:id="@+id/pwdField"
            android:layout_column="2"
            android:layout_row="3"
            android:ems="10"
            android:singleLine="true"
            android:textColor="#ffffff" />
    </GridLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:gravity="center"
        android:orientation="horizontal" >

        <Button
            android:onClick="cancelEdit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="10dp"
            android:background="@drawable/all_btn"
            android:text="Cancel"
            android:textColor="#ffffff" />

        <Button
            android:onClick="saveEdit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:background="@drawable/all_btn"
            android:text="Save"
            android:textColor="#ffffff" />
    </LinearLayout>

</LinearLayout>