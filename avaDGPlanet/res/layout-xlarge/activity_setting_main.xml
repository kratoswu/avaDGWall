<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/back_ground" >

    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginRight="80dp"
        android:layout_marginLeft="80dp"
        android:layout_marginTop="60dp"
        android:layout_marginBottom="60dp"
        android:columnCount="5"
        android:rowCount="2" >
        
        <Button
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:layout_column="0"
            android:layout_marginBottom="10dp"
            android:layout_marginRight="10dp"
            android:layout_row="0"
            android:background="@drawable/main_icon"
            android:gravity="center"
            android:onClick="goToSystemSetting"
            android:text="@string/btn_sys_setting"
            android:textColor="#ffffff"
            android:textSize="45sp" />

        <Button
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:layout_column="1"
            android:layout_marginRight="10dp"
            android:layout_row="0"
            android:background="@drawable/main_icon"
            android:gravity="center"
            android:onClick="goToCtrlPnlSetting"
            android:text="@string/btn_control_setting"
            android:textColor="#ffffff"
            android:textSize="45sp" />
        
        <Button
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:layout_column="2"
            android:layout_marginRight="10dp"
            android:layout_row="0"
            android:background="@drawable/main_icon"
            android:gravity="center"
            android:onClick="goToDPSetting"
            android:text="@string/btn_dp_setting"
            android:textColor="#ffffff"
            android:textSize="45sp" />
        
        <Button
            android:onClick="goToZWDSetting"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:layout_column="3"
            android:layout_marginRight="10dp"
            android:layout_row="0"
            android:background="@drawable/main_icon"
            android:gravity="center"
            android:text="@string/btn_zwave_setting"
            android:textColor="#ffffff"
            android:textSize="45sp" />
        
        <Button
            android:onClick="goToSceneSetting"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:layout_column="4"
            android:layout_marginRight="10dp"
            android:layout_row="0"
            android:background="@drawable/main_icon"
            android:gravity="center"
            android:text="@string/btn_scene_setting"
            android:textColor="#ffffff"
            android:textSize="45sp" />
        
        <Button
            android:visibility="visible"
            android:onClick="goToSecuritySetting"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:layout_column="0"
            android:layout_marginBottom="10dp"
            android:layout_marginRight="10dp"
            android:layout_row="1"
            android:background="@drawable/main_icon"
            android:gravity="center"
            android:text="@string/btn_janitor_setting"
            android:textColor="#ffffff"
            android:textSize="45sp" />
        
        <Button
            android:visibility="visible"
            android:onClick="goToNVRSetting"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:layout_column="1"
            android:layout_marginBottom="10dp"
            android:layout_marginRight="10dp"
            android:layout_row="1"
            android:background="@drawable/main_icon"
            android:gravity="center"
            android:text="@string/btn_nvr_setting"
            android:textColor="#ffffff"
            android:textSize="45sp" />
        
        <Button
            android:visibility="visible"
            android:onClick="goToTriggerSetting"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:layout_column="2"
            android:layout_marginBottom="10dp"
            android:layout_marginRight="10dp"
            android:layout_row="1"
            android:background="@drawable/main_icon"
            android:gravity="center"
            android:text="@string/btn_trigger_setting"
            android:textColor="#ffffff"
            android:textSize="45sp" />
        
        <Button
            android:visibility="invisible"
            android:onClick="goToTestSetting"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:layout_column="4"
            android:layout_marginBottom="10dp"
            android:layout_marginRight="10dp"
            android:layout_row="1"
            android:background="@drawable/main_icon"
            android:gravity="center"
            android:text="面板測試"
            android:textColor="#ffffff"
            android:textSize="45sp" />

    </GridLayout>

</LinearLayout>