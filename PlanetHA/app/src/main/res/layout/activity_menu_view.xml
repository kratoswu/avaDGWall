<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <ScrollView
        android:id="@+id/scrollView1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical" >

            <LinearLayout
                android:id="@+id/layout1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:baselineAligned="false" >

                <Button
                    android:id="@+id/button_control"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="6dp"
                    android:layout_marginRight="3dp"
                    android:layout_weight="1"
                    android:background="@drawable/selector_menu_control"
                    android:drawableTop="@drawable/menu_control"
                    android:text="@string/menu_control"
                    android:textColor="@color/contents_text" />

                <Button
                    android:id="@+id/button_scene"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="3dp"
                    android:layout_marginRight="6dp"
                    android:layout_weight="1"
                    android:background="@drawable/selector_menu_scene"
                    android:drawableTop="@drawable/menu_scene"
                    android:text="@string/menu_scene"
                    android:textColor="@color/contents_text" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/layout2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:gravity="center"
                android:orientation="horizontal" >

                <Button
                    android:id="@+id/button_camera"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="6dp"
                    android:layout_marginRight="3dp"
                    android:layout_weight="1"
                    android:background="@drawable/selector_menu_cam"
                    android:drawableTop="@drawable/menu_cam"
                    android:text="@string/menu_camera"
                    android:textColor="@color/contents_text" />

                <Button
                    android:id="@+id/button_trigger"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="3dp"
                    android:layout_marginRight="6dp"
                    android:layout_weight="1"
                    android:background="@drawable/selector_menu_trigger"
                    android:drawableTop="@drawable/menu_trigger"
                    android:text="@string/menu_trigger"
                    android:textColor="@color/contents_text" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/layout3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:gravity="center"
                android:orientation="horizontal" >

                <Button
                    android:id="@+id/button_schedule"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="6dp"
                    android:layout_marginRight="3dp"
                    android:layout_weight="1"
                    android:background="@drawable/selector_menu_schedule"
                    android:drawableTop="@drawable/menu_schedule"
                    android:text="@string/menu_schedule"
                    android:textColor="@color/contents_text" />

                <Button
                    android:id="@+id/button_setting"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="3dp"
                    android:layout_marginRight="6dp"
                    android:layout_weight="1"
                    android:background="@drawable/selector_menu_setting"
                    android:drawableTop="@drawable/menu_setting"
                    android:text="@string/menu_setting"
                    android:textColor="@color/contents_text" />

            </LinearLayout>

			<LinearLayout
                android:id="@+id/layout5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:gravity="center"
                android:orientation="horizontal" >

				<Button
				    android:id="@+id/button_report"
				    android:layout_width="match_parent"
				    android:layout_height="match_parent"
				    android:layout_marginLeft="6dp"
				    android:layout_marginRight="3dp"
				    android:layout_weight="1"
				    android:background="@drawable/selector_menu_report"
				    android:drawableTop="@drawable/report_b"
				    android:text="@string/REPORT"
				    android:textColor="@color/contents_text" />

                <Button
                    android:id="@+id/button_history"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="3dp"
                    android:layout_marginRight="6dp"
                    android:layout_weight="1"
                    android:background="@drawable/selector_menu_notify_history"
                    android:drawableTop="@drawable/menu_notify_history"
                    android:text="@string/menu_notify_history"
                    android:textColor="@color/contents_text" />

            </LinearLayout>
            
			<LinearLayout
			    android:id="@+id/layout4"
			    android:layout_width="match_parent"
			    android:layout_height="wrap_content"
			    android:layout_marginTop="5dp"
			    android:gravity="center"
			    android:orientation="horizontal"
			    android:visibility="gone" >

                <Button
                    android:id="@+id/button_notify"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="6dp"
                    android:layout_marginRight="6dp"
                    android:background="@drawable/selector_menu_notify"
                    android:drawableLeft="@drawable/menu_notify_on"
                    android:text="@string/menu_notify_on"
                    android:textColor="@color/contents_text" />

            </LinearLayout>

        </LinearLayout>
    </ScrollView>

</LinearLayout>
