<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="@drawable/back_ground"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="20dp"
    android:paddingRight="20dp"
    android:paddingTop="@dimen/activity_vertical_margin" >

    <!-- <com.camera.simplemjpeg.MjpegView
        android:layout_marginRight="20dp"
        android:layout_width="0dp"
        android:layout_weight="4"
        android:layout_height="match_parent"
        android:id="@+id/doorVideo" /> -->
    
    <ImageView
        android:background="#000000"
        android:layout_marginLeft="30dp"
        android:layout_width="0dp"
        android:layout_weight="6"
        android:layout_height="match_parent"
        android:id="@+id/doorVideo" />

    <LinearLayout
        android:layout_marginLeft="50dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="40dp"
        android:orientation="vertical"
        android:layout_width="0dp"
        android:layout_weight="2"
        android:layout_height="match_parent" >

        <Button
            android:textSize="24sp"
            android:textColor="#facc2e"
            android:text="@string/btn_answer"
            android:layout_marginBottom="25dp"
            android:paddingLeft="90dp"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:gravity="left|center_vertical"
            android:background="@drawable/answer_btn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/answerBtn" />
        
        <Button
            android:textSize="24sp"
            android:textColor="#facc2e"
            android:text="@string/btn_hangup"
            android:layout_marginBottom="25dp"
            android:paddingLeft="90dp"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:gravity="left|center_vertical"
            android:background="@drawable/hangup"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/hangupBtn" />
        
        <Button
            android:textSize="24sp"
            android:textColor="#facc2e"
            android:text="@string/btn_mute"
            android:layout_marginBottom="25dp"
            android:paddingLeft="90dp"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:gravity="left|center_vertical"
            android:background="@drawable/mute_btn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/muteBtn" />
        
        <Button
            android:textSize="24sp"
            android:textColor="#facc2e"
            android:text="@string/btn_snap"
            android:layout_marginBottom="25dp"
            android:paddingLeft="90dp"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:gravity="left|center_vertical"
            android:background="@drawable/snap_btn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/snapBtn" />

        <Button
            android:textSize="24sp"
            android:textColor="#facc2e"
            android:text="@string/btn_open"
            android:paddingLeft="90dp"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:gravity="left|center_vertical"
            android:background="@drawable/open_btn"
            android:id="@+id/openDoorBtn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

    </LinearLayout>

</LinearLayout>
