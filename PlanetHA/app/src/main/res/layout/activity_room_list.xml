<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ActivityRoomList" >

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/activity_devices_func_layout"
        android:layout_alignParentTop="true"
        android:orientation="vertical" >

        <LinearLayout
            android:id="@+id/admintoolLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >

            <Button
                android:id="@+id/tab_add"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="#20FFFFFF"
                android:drawableTop="@drawable/selector_tab_add"
                android:text="@string/tab_button_add"
                android:textSize="12sp"
                style="@style/AppBaseTheme" />

            <Button
                android:id="@+id/tab_del"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="#20FFFFFF"
                android:drawableTop="@drawable/selector_tab_del"
                android:text="@string/tab_button_del"
                android:textSize="12sp"
                style="@style/AppBaseTheme" />
        </LinearLayout>

        <GridView
            android:id="@+id/gridview"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:horizontalSpacing="5dp"
            android:numColumns="2"
            android:padding="0dp"
            android:stretchMode="columnWidth"
            android:verticalSpacing="5dp" >
        </GridView>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/activity_devices_func_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true" >

        <Button
            android:id="@+id/tab_control"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/selector_tab_background"
            android:drawableTop="@drawable/tab_control"
            android:text="@string/menu_control"
            android:textSize="12sp"
            style="@style/AppBaseTheme" />

        <Button
            android:id="@+id/tab_scene"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/selector_tab_background"
            android:drawableTop="@drawable/tab_scene"
            android:text="@string/menu_scene"
            android:textSize="12sp"
            style="@style/AppBaseTheme" />

        <Button
            android:id="@+id/tab_cam"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/selector_tab_background"
            android:drawableTop="@drawable/tab_cam"
            android:text="@string/menu_camera"
            android:textSize="12sp"
            style="@style/AppBaseTheme" />
        
        <Button
            android:id="@+id/tab_back"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="#20FFFFFF"
            android:drawableTop="@drawable/selector_tab_back"
            android:text="@string/tab_button_back"
            android:textSize="12sp"
            style="@style/AppBaseTheme" />
    </LinearLayout>

</RelativeLayout>