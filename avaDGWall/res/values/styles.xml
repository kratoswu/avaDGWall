<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <style name="Default" parent="android:Theme" />

    <style name="NoTitle" parent="android:Theme.NoTitleBar" />

    <style name="FullScreen" parent="android:Theme.NoTitleBar.Fullscreen" />

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="android:Theme.Light">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
    </style>

    <style name="AvaTheme" parent="android:style/Theme.Holo.Light">
        <item name="android:actionBarStyle">@style/AvaActionBar</item>
        <item name="android:actionBarTabTextStyle">@style/MyActionBarTabText</item>
        <item name="android:actionOverflowButtonStyle">@style/MyOverflowMenuButton</item>
    </style>

    <style name="AvaActionBar" parent="@android:style/Widget.Holo.Light.ActionBar.Solid.Inverse">
        <item name="android:background">@drawable/back_bar</item>
        <item name="android:titleTextStyle">@style/MyActionBarTabText</item>
    </style>

    <style name="MyOverflowMenuButton" parent="@android:style/Widget.Holo.ActionButton.Overflow">
        <item name="android:src">@drawable/menu</item>
    </style>

    <style name="MyActionBarTabText" parent="@android:style/Widget.ActionBar.TabText">
        <item name="android:textColor">#ffffff</item>
        <item name="android:textSize">25sp</item>
    </style>

</resources>