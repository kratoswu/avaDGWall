<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        android:background="@color/sbc_snippet_text" >

        <RelativeLayout
            android:id="@+id/RelativeLayout1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:orientation="vertical" >

            <ImageButton
                android:id="@+id/button_close"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:background="#00000000"
                android:src="@drawable/btn_close" />

            <TextView
                android:id="@+id/TextView_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/button_close"
                android:gravity="center"
                android:text="Node name"
                android:textAppearance="?android:attr/textAppearanceLarge" />

            <ImageView
                android:id="@+id/imageframe"
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:layout_below="@+id/TextView_title"
                android:layout_marginTop="10dp"
                android:scaleType="fitCenter"
                android:src="@drawable/dimmer_light_off" />

            <ImageView
                android:id="@+id/ImageView_off"
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:layout_alignBottom="@+id/imageframe"
                android:layout_alignLeft="@+id/imageframe"
                android:layout_alignRight="@+id/imageframe"
                android:layout_alignTop="@+id/imageframe"
                android:scaleType="fitCenter"
                android:src="@drawable/dimmer_light_off" />

            <ImageView
                android:id="@+id/ImageView_on"
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:layout_alignBottom="@+id/imageframe"
                android:layout_alignLeft="@+id/imageframe"
                android:layout_alignRight="@+id/imageframe"
                android:layout_alignTop="@+id/imageframe"
                android:scaleType="fitCenter"
                android:src="@drawable/dimmer_light_on" />

            <SeekBar
                android:id="@+id/SeekBar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/imageframe"
                android:layout_marginTop="16dp" />

            <TextView
                android:id="@+id/TextView_value"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_above="@+id/SeekBar"
                android:layout_alignParentRight="true"
                android:layout_below="@+id/TextView_title"
                android:gravity="center"
                android:text="Large Text"
                android:textAppearance="?android:attr/textAppearanceLarge" />
        </RelativeLayout>

    </RelativeLayout>

</LinearLayout>
